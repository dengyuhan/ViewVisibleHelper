<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="8.33dp"
        android:background="@color/colorDivider" />

    <com.dyhdyh.helper.viewvisible.example.SampleCoverVideo
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginBottom="12.66dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12.66dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="11dp"
        android:paddingStart="11dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12.66dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2.66dp"
            android:maxLines="2"
            android:textColor="@color/colorText"
            android:textSize="14.33sp"
            tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/iv_avatar"
                tools:text="呵呵" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10.66dp"
        android:layout_marginTop="12.66dp"
        android:background="@color/colorDivider" />
</LinearLayout>